<form action="/auth/emp/comp" method="post">
  <div>
    <label for="type">Occupation: </label>
    <select name="type" id="type">
      <option value="PLUMBER">Plumber</option>
      <option value="MECHANIC">Mechanic</option>
      <option value="ELECTRICIST">Electricist</option>
      <option value="LOCKSMITH">Locksmith</option>
      <option value="CARETAKER">Caretaker</option>
    </select>
  </div>
  <div>
    <h3>Timetable</h3>
    <div>
      <label for="start">From: </label>
      <input type="time" name="start" id="start">
    </div>
    <div>
      <label for="end">To: </label>
      <input type="time" name="end" id="end">
    </div>
  </div>
  <div>
    <label for="aboutMe">Tell us a little about you: </label>
    <textarea name="aboutMe" id="aboutMe" cols="30" rows="10"></textarea>
  </div>
  <div>
    <label for="location">Location: </label>
    <input type="text" name="location" id="location">
  </div>
  <div>
    <input type="submit" value="Send">
  </div>
</form>